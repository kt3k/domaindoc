{% import viewDir + "/__type.njk" as type %}
<title>{{ title }}</title>
{% include viewDir + "/__head.njk" %}

<section>
<h1>{{ title }}</h1>

{% for f in file.files %}
  <h2>
    <a name="{{ f.fm.name }}"></a>
    {{ type.type(file.fileMap, f.fm.name, basepath(file), 'page', opts) }}
    {% if f.fm.desc %}
      <small>{{ f.fm.desc }}</small>
    {% endif %}
  </h2>

  {% if f.fm.props and f.fm.props.length > 0 %}
    <ul>
    {% for prop in f.fm.props %}
      <li>{{ prop.name }} <small>{{ type.type(file.fileMap, prop.type, basepath(file), 'in-page', opts) }}</small>
    {% endfor %}
    </ul>
  {% endif %}
{% endfor %}

{% include viewDir + "/__footer.njk" %}
</section>
