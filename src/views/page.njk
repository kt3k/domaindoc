{% import viewDir + "/__type.njk" as type %}
<title>{{ file.fm.name }} | {{ file.fm.title }}</title>
{% include viewDir + "/__head.njk" %}

<section>
<p><a href="{{ basepath(file) }}/index.html">TOP</a>
<nav>
<ul>
{% for f in file.files %}
  <li><a href="{{ basepath(file) }}/{{ f.relative }}">{{ f.fm.name }}</a>
{% endfor %}
</ul>
</nav>
<hr>
<h1>{{ file.fm.name }}</h1>

{% if file.fm.desc %}
  <p>{{ file.fm.desc }}</p>
{% endif %}

{% if file.fm.props %}
  <ul>
  {% for property in file.fm.props %}
    <li>
    {{ '{' }}{{ type.type(file.fileMap, property.type, basepath(file)) }}{{ '}' }}
    {{ property.name }}
    -
    {{ property.desc }}
  {% endfor %}
  </ul>
{% endif %}

{% include viewDir + "/__footer.njk" %}
</section>
